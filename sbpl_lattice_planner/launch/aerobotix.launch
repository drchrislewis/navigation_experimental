<launch>
  <param name="/use_sim_time" value="true"/>

  <!-- throttles voxel_grid to 3 times a second -->
  <!-- move_base with tons of parameters -->
  <include file="$(find sbpl_lattice_planner)/launch/move_base_ar/move_base_sbpl.xml"/>

  <!-- publishes a map given an image, and provides basic map services -->
  <!-- critical parameters: -->
  <!-- base_global_planner -->
  <!-- base_local_planner -->
  
  <node name="map_server" pkg="map_server" type="map_server" args="$(find sbpl_lattice_planner)/worlds/rough_map.pgm 0.05" />

  <!-- 2D multi-robot simulator -->
  <node pkg="stage_ros" type="stageros" name="stageros" args="$(find sbpl_lattice_planner)/worlds/rough_map.world" respawn="false" >
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>

  <!-- publishes amcl_pose (geometry_msgs/PoseWithCovarianceStamped) -->
  <!-- publishes particlecloud (geometry_msgs/PoseArray) I believe this is a shape like the robot's -->
  <!-- both are just the pose of the simulated robot -->
  <!-- also publishes the odometry tf -->
  <node name="fake_localization" pkg="fake_localization" type="fake_localization" respawn="false" />

  <!-- just rviz and its associated plugins -->		 
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find sbpl_lattice_planner)/rviz/sbpl.rviz" />
</launch>
